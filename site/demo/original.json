{"form":{
	"name":"demo",
	"action":"/some_url",
	"method":"POST",
	"title":"A CoolForm Example",
	"description":"lorem ipsum...",
	"submit":"Submit my CoolForm!",
	"reset":"Reset...",
	"pages":[
		{"title":"First Page",
		 "description":"Section description lorem ipsum...",
		 "lines":[
		 	 {"header": {
				 "title":"Login Info",
				 "description":"Section description lorem ipsum..."}},
			 {"fields": [
				 {"name":"first_name",
				  "type":"text",
				  "label":"First Name",
